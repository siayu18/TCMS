<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDrawer?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" stylesheets="@../../css/Toolbar.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tcms.controller.ToolbarController">
    <children>
        <!-- Top Toolbar -->
        <JFXToolbar styleClass="jfx-toolbar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <left>
                <JFXHamburger fx:id="hamburger" prefHeight="40.0" prefWidth="58.0" styleClass="jfx-hamburger" BorderPane.alignment="CENTER" />
            </left>
            <center>
                <Label fx:id="txtCurrentWindow" prefHeight="40.0" prefWidth="98.0" styleClass="toolbar-title" text="TCMS" BorderPane.alignment="CENTER" />
            </center>
        </JFXToolbar>

        <!-- Main content holder pane -->
        <AnchorPane fx:id="holderPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
            <children>
            </children>
        </AnchorPane>

        <!-- Side Drawer -->
        <JFXDrawer fx:id="drawer" defaultDrawerSize="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="40.0" />
    </children>
</AnchorPane>
